<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>true</primitive>
  <annotatorImplementationName>org.barcelonamedia.uima.tools.OpinionFilter</annotatorImplementationName>
  <analysisEngineMetaData>
    <name>OpinionFilter</name>
    <description>Filters superfluous polarities set by PolarMapper. Therefore this annotator should always be used in conjunction with PolarMapper.</description>
    <version>1.0</version>
    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>matchChars</name>
        <description>number of POS characters to match (initial characters of POS tag)
if not set: use full POS tag</description>
        <type>Integer</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>tokenTypeName</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>matchingFeatureName</name>
        <description>The matching feature to be used to filter must be defined in internal_type annotation as well as in tokenTypeName</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>internalTypeName</name>
        <description>Type of the internal annotation to be used by OpinionMapper and OpinionFilter.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>externalTypeName</name>
        <description>Annotation type to be generated by the OpinionFilter</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>copyFeaturesNames</name>
        <description>List of features defined in both internal_type annotation and external_type annotation .
These features will be copied from internal_type to external_type.</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>matchChars</name>
        <value>
          <integer>1</integer>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>tokenTypeName</name>
        <value>
          <string>org.barcelonamedia.uima.ts.Token</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>matchingFeatureName</name>
        <value>
          <string>posTag</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>copyFeaturesNames</name>
        <value>
          <array>
            <string>polarity</string>
          </array>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>internalTypeName</name>
        <value>
          <string>org.barcelonamedia.uima.opinionfilter.internal_ts.ConceptMapperOpinion</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>externalTypeName</name>
        <value>
          <string>org.barcelonamedia.uima.ts.opinion.Polar</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <imports>
        <import name="bm-syntax-types"/>
        <import name="bm-opinion-types"/>
        <import location="bm-opinionfilter-internal-types.xml"/>
      </imports>
    </typeSystemDescription>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">org.barcelonamedia.uima.ts.Token</type>
          <type allAnnotatorFeatures="true">org.barcelonamedia.uima.opinionfilter.internal_ts.ConceptMapperOpinion</type>
        </inputs>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration/>
</analysisEngineDescription>
